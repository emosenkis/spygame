<% provide(:title, @event.title) %>
<h1><%= @event.mission_template.title %></h1>

<container>
<h2>
<%= @event.title %>
</h2>

<div class="span8 offset2">
    <p>
		<%= @event.description %>
	</p>
    <div class="row">
		<div class="progress progress-striped progress-danger active">
			<div class="bar" style="width: 50%;"></div>
		</div>
		<div class="center">
			<% if @next_event==nil %>
				<%= link_to "Mission Select", mission_templates_path, class: "btn btn-large btn-primary"%>
			<% else %> 
				<%= link_to "Next", event_template_path(@next_event), class: "btn btn-large btn-primary"%>
			<%end%>
		</div>
	</div>
</div>

