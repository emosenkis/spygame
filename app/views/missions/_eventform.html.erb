<%= form_for(current_user.events.build(mission_id: mission.id)) do |f| %>
  <div><%= f.hidden_field :mission_id %></div> 
  <div><%= f.hidden_field :user_id %>
  <div class="controls">
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>
  </div>
  <%= f.submit "Add Event", class: "btn btn-small" %> 
<% end %>
